# Flask Configuration
FLASK_ENV=development
FLASK_APP=wsgi.py
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=sqlite:///elcorp.db

# Mail Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@elcorp.com

# Administrators (comma-separated emails)
ADMINS=admin@elcorp.com

# Password Reset Token Expiry (seconds)
PASSWORD_RESET_TOKEN_EXPIRY=3600

# Password History (number of passwords to check for reuse)
PASSWORD_HISTORY_COUNT=5

# Require 2FA Re-authentication for Password Changes
REQUIRE_2FA_REAUTH=false

# API Configuration
API_ITEMS_PER_PAGE=20
MAX_CONTENT_LENGTH=16777216

# Security
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_SECURE=false

# Redis Configuration
REDIS_URL=redis://redis:6379/0
SENTRY_DSN=
PROMETHEUS_ENABLED=true
JWT_SECRET=replace-with-secure-random

# For deployment:
GIT_COMMIT_SHA=
APP_VERSION=
BUILD_DATE= 
DOCKER_IMAGE_TAG= 
# End of .env.example
